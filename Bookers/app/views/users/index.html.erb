<div class="container">
	<div class="row">

		<%= render 'books/form', user:@user, book: @book %>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" , size: '40x40' %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user %></td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

