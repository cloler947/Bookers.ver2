<div class="container">

	<div class="center-block">
      <%= render 'layouts/flash' %>
    </div>
	
	<div class="row">
		<div class="top-message col-md-offset-3 col-md-6">
			<h1>welcome to<strong><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers</strong>!!</h1>
		
			<p>In<span class="glyphicon glyphicon-book" aria-hidden="true"></span><strong>Bookers</strong>,</p>
			<p>you can share and exchange your opinions , inpressions , and emotions</p>
			<p>about various books!</p>
		</div>

		<div class="btn-wrapper">
				<% if user_signed_in? %>
					<div class="row">
						<p>
							<button class="btn btn-info col-xs-10 col-xs-offset-1 sign_in"><%= link_to 'Log in', user_path(@user) %>
							</button>
						</p>
					</div>
					<div class="row">
						<p>
							<button class="btn btn-success col-xs-10 col-xs-offset-1 sign_up">
								<%= link_to 'Sign up', user_path(@user) %>
							</button>
						</p>
					</div>
				<% else %>
					<div class="row">
						<p>
							<button class="btn btn-info col-xs-10 col-xs-offset-1 sign_in">
								<%= link_to 'Log in', new_user_session_path %>
							</button>
						</p>
					</div>
					<div class="row">
						<p>
							<button class="btn btn-success col-xs-10 col-xs-offset-1 sign_up">
								<%= link_to 'Sign Up', new_user_registration_path %>
							</button>
						</p>
					</div>
				<% end %>
		</div>
	</div>
</div>
